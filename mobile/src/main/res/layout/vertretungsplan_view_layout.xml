<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/vplan_layout"
    android:background="#fbfbfb">

    <TextView
        android:id="@+id/vertretungsplan_view_textView_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vertretung in Englisch (1-2 Stunde)"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/vplan_item_Button_expand"
        android:src="@drawable/ic_keyboard_arrow_down_black_48dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:padding="4dp"
        android:background="#fbfbfb"
        android:layout_below="@+id/vertretungsplan_view_textView_moreInformation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Neuer Lehrer: Maier\nNeuer Raum: G207"
        android:id="@+id/vertretungsplan_view_textView_moreInformation"
        android:textSize="16dp"
        android:layout_below="@+id/vertretungsplan_view_textView_headline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Neuer Lehrer: Maier\nAlter Lehrer: Frau BÃ¶gel\nNeuer Raum: G103\nAlter Raum: F123\nBetroffene Klasse(n): 6G3, 7H4"
        android:id="@+id/vplan_item_textView_moreInformation2"
        android:textSize="16dp"
        android:layout_below="@+id/vertretungsplan_view_textView_headline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

</RelativeLayout>