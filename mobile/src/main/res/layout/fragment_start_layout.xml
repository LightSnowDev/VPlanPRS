<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:background="#00dec0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Philipp Reis Schule"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/fragmentStart_CardVertretungsstunden"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name"
                android:textSize="16dp"
                android:text="Vertretungsstunden"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/fragmentStart_Card_textView_number"
                android:layout_toEndOf="@+id/fragmentStart_Card_textView_number"
                android:layout_marginLeft="16dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_age"
                android:text="Klicke für mehr Details"
                android:layout_below="@+id/person_name"
                android:layout_alignLeft="@+id/person_name"
                android:layout_alignStart="@+id/person_name" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="3"
                android:id="@+id/fragmentStart_Card_textView_number"
                android:background="@drawable/circle_textview"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/progressBar"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/cardview_light_background" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentStart_CardSV"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:padding="16dp"
                android:id="@+id/relativeLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_namxxe"
                    android:textSize="16dp"
                    android:text="Schülervertretung Nachrichten"
                    android:textColor="#000000"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView7"
                    android:layout_toEndOf="@+id/textView7"
                    android:layout_marginLeft="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SV"
                    android:id="@+id/textView7"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_agesnjdnfjd"
                    android:text="Klicke für mehr Details"
                    android:layout_below="@+id/person_namxxe"
                    android:layout_alignLeft="@+id/person_namxxe"
                    android:layout_alignStart="@+id/person_namxxe"
                    android:layout_gravity="center_horizontal|bottom" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/relativeLayout"
                android:background="#cecece"
                android:id="@+id/relativeLayout2"
                android:elevation="0dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativeLayout2"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wir treffen uns immer Mittwochs in G107\n\n1. Wahlen am Donnerstag den 12.03!\n2. Wir brauchen helfer für morgen.\n3. Termin für Gesamtkonferenz: 31 April."
                    android:id="@+id/textView11"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="16dp" />

            </ScrollView>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 aktuelle Vertretungsstunden"
        android:id="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:background="#14000000" />
</LinearLayout>