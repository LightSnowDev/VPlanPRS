<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vplan_news_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_amber_100"
    android:orientation="vertical">

    <TextView
        android:id="@+id/vertretungsplan_news_view_textView_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@color/md_amber_100"
        android:text="Nachrichten fÃ¼r heute den 22.02, Woche 46"
        android:textColor="#000000"
        android:textSize="16dp" />

    <WebView
        android:id="@+id/vertretungsplan_news_view_textView_moreInformation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vertretungsplan_news_view_textView_headline"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/md_amber_100"
        android:clickable="false"
        android:text="Unterrichtsfrei: 5G1, 5G2, 5G3, ...\ns"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp" />

    <ImageButton
        android:id="@+id/vplan_news_item_Button_expand"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/vertretungsplan_news_view_textView_moreInformation"
        android:layout_marginTop="-40dp"
        android:adjustViewBounds="true"
        android:background="@color/md_amber_50"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_keyboard_arrow_down_black_48dp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cdcdcd"
        android:layout_below="@id/vertretungsplan_news_view_textView_moreInformation"/>


</LinearLayout>